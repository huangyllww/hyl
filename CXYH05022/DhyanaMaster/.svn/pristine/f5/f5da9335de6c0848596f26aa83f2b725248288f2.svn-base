End

LibraryMapping
	Class  = "NULL"
	Instance  = "OemCustPkg.LocalHddBoot"
	Override  = "AmiModulePkg.Bds"
End

TOKEN
    Name  = "DEFAULT_ALI_LOCAL_HDD_BOOT"
    Value  = "1"
    Help  = "Enable/Disable Local Hdd Boot Function"
    TokenType = Integer
    TargetH = Yes
End

ELINK
	Name  = "LocalHddFilter,"
	Parent  = "BootOptionBootDeviceFilteringFunctions"
	InvokeOrder = AfterParent
End

