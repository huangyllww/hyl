	TokenType = Boolean
	TargetEQU = Yes
	TargetMAK = Yes
	Master = Yes
    Token = "ALI_LOCAL_HDD_BOOT_SUPPORT" "=" "1"
End

INFComponent
    Name  = "LocalHddBoot"
    File  = "LocalHddBoot.inf"
