#ifdef SERVER_MGMT_CONFIGURATION_DATA_DEFINITION
UINT8 AcPowerCtl;
#endif //SERVER_MGMT_CONFIGURATION_DATA_DEFINITION

#ifdef CONTROL_DEFINITION

    #define ONEOF_AC_LOSS_CONTROL_MODE\
        grayoutif ideqval SYSTEM_ACCESS.Access == SYSTEM_PASSWORD_USER;\
            oneof varid	= SERVER_MGMT_CONFIGURATION_DATA.AcPowerCtl,\
                prompt = STRING_TOKEN(STR_AC_LOSS_CONTROL_MODE),\
                help   = STRING_TOKEN(STR_AC_LOSS_CONTROL_MODE_HELP),\
                default     = DEFAULT_ACLOSS_CONTROL,\
                default     = DEFAULT_ACLOSS_CONTROL, defaultstore = AmiMfgDefault,\
                option text = STRING_TOKEN (STR_ALWAYS_ON),   value = 2,  flags = 0 | RESET_REQUIRED;\
                option text = STRING_TOKEN (STR_ALWAYS_OFF),  value = 0,  flags = 0 | RESET_REQUIRED;\
                option text = STRING_TOKEN (STR_PREVIOUS),    value = 1,  flags = 0 | RESET_REQUIRED;\
            endoneof;\
        endif;

#endif //#ifdef CONTROL_DEFINITION


#ifdef CONTROLS_WITH_DEFAULTS
        ONEOF_AC_LOSS_CONTROL_MODE
#endif //#ifdef CONTROLS_WITH_DEFAULTS

//**********************************************************************
//                  Server Management - Ac Power Loss Options Item
//**********************************************************************

#ifdef SERVER_MGMT_FORM_SET
  #ifdef FORM_SET_ITEM
      //<YinQiang002-20170724 Hide AC Powerm Loss When BMC Support Disabled +>
      suppressif  ideqval SERVER_MGMT_CONFIGURATION_DATA.BmcSupport == 0;
      grayoutif ideqval SYSTEM_ACCESS.Access == SYSTEM_PASSWORD_USER;
          ONEOF_AC_LOSS_CONTROL_MODE   
      SUPPRESS_GRAYOUT_ENDIF
      //<YinQiang002-20170724 Hide AC Powerm Loss When BMC Support Disabled ->
  #endif//FORM_SET_ITEM
#endif // SERVER_MGMT_FORM_SET
