#ifdef CONTROL_DEFINITION

#define NVME_BOOT_SWITCH \
    oneof varid =   SETUP_DATA.NVMEBootSwitch,\
        prompt = STRING_TOKEN(STR_NVME_BOOT_PROMPT),\
        help = STRING_TOKEN(STR_NVME_BOOT_PROMPT_HELP),\
        option text = STRING_TOKEN(STR_NVME_BOOT_ENABLE_PROMPT), value = 1, flags = RESET_REQUIRED|MANUFACTURING | DEFAULT;\
        option text = STRING_TOKEN(STR_NVME_BOOT_DISENABLE_PROMPT),  value = 0, flags = 0|RESET_REQUIRED;\
    endoneof;
#endif //#ifdef CONTROL_DEFINITION


#ifdef CONTROLS_WITH_DEFAULTS
    NVME_BOOT_SWITCH
#endif //#ifdef CONTROLS_WITH_DEFAULTS


#ifdef BOOT_FORM_SET

    #ifdef FORM_SET_ITEM
        // Define controls to be added to the main page of the formset
        NVME_BOOT_SWITCH
    #endif
#endif  // BOOT_FORM_SET

