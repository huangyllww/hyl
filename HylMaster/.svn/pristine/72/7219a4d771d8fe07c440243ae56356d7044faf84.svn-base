TOKEN
	Name  = "AFU_BCP_PRESERVE_VAR_BIN_SUPPORT"
	Value  = "1"
	Help  = "Main switch to enable binary support for preserving AFU BCP related variables"
	TokenType = Boolean
	TargetEQU = Yes
	TargetMAK = Yes
	Master = Yes
	Token = "ENABLE_BIOS_CONFIG_PRESERVE_SUPPORT" "=" "1"
End

PATH
	Name  = "AFU_BCP_PRESERVE_VAR_BIN_DIR"
End

ELINK
	Name  = "RestoreBcpAfuVariables,"
	Parent  = "SMIFlashEndUpdateList"
	InvokeOrder = AfterParent
End

INFComponent
	Name  = "AfuBcpPreserveVar"
	File  = "AfuBcpPreserveVarBin.inf"
	Package  = "AfuBcpPreserveVar"
	ModuleTypes  = "BASE"
End

LibraryMapping
    Class  = "AfuBcpPreserveVar"
    Instance  = "AfuBcpPreserveVar.AfuBcpPreserveVar"
End

LibraryMapping
	Class  = "NULL"
	Instance  = "AfuBcpPreserveVar.AfuBcpPreserveVar"
	Override  = "AmiModulePkg.SmiFlash"
End
