TOKEN
    Name  = "Taishan_SPI_SUPPORT"
    Value  = "1"
    Help  = "Main switch to enable Taishan SPI support in Project"
    TokenType = Boolean
    Master = Yes
End

PATH
    Name  = "SPI_CSP_DIR"
End

TOKEN
    Name  = "YANGTZE_SPI"
    Value  = "0"
    Help  = "Switch to SPI support for YangTze."
    TokenType = Boolean
	TargetH = Yes
End

TOKEN
    Name  = "REG80_FIFO_SUPPORT"
    Value  = "0"
    Help  = "Switch to use 64 bytes FIFO at register 0x80"
    TokenType = Boolean
    TargetH = Yes
End

TOKEN
    Name  = "ENABLE_ROM_CACHE_IN_DXE"
    Value  = "0"
    Help  = "Switch to enable ROM cache in DXE"
    TokenType = Boolean
    TargetH = Yes
End

INFComponent
    Name  = "TaishanCspSpiFlashLib"
    File  = "TaishanCspSpiFlashLib.inf"
    Package  = "AmiModulePkg"
End

INFComponent
	Name  = "TaishanCspSpiFlashPeiLib"
	File  = "TaishanCspSpiFlashPeiLib.inf"
	Package  = "AmiModulePkg"
End

LibraryMapping
    Class  = "CspSpiFlashLib"
    Instance  = "AmiModulePkg.TaishanCspSpiFlashLib"
    ModuleTypes  = "DXE_CORE DXE_DRIVER DXE_RUNTIME_DRIVER DXE_SAL_DRIVER DXE_SMM_DRIVER SMM_CORE UEFI_APPLICATION UEFI_DRIVER"
End

LibraryMapping
	Class  = "CspSpiFlashLib"
	Instance  = "AmiModulePkg.TaishanCspSpiFlashPeiLib"
	ModuleTypes  = "PEIM"
End

